<h2><%= t 'shared.sign_up.title' %></h2>
<span class="row"></span>
<%= form_for(Client.new, as: :client, url: client_registration_path, remote: true, :html => { class: 'form-horizontal', :'data-type' => 'json'}) do |f| %>

    <div class="field form-group">
      <%= f.label :first_name , class: 'col-xs-4 col-md-5 control-label' %>
      <div class="col-xs-7 col-md-3 ">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :last_name , class: 'col-xs-4 col-md-5 control-label' %>
      <div class="col-xs-7 col-md-3">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :email , class: 'col-xs-4 col-md-5 control-label' %>
      <div class="col-xs-7 col-md-3">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :login , class: 'col-xs-4 col-md-5 control-label' %>
      <div class="col-xs-7 col-md-3">
        <%= f.text_field :login, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password , class: 'col-xs-4 col-md-5 control-label'  %>
      <div class="col-xs-7 col-md-3">
        <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off",class: 'form-control' %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :password_confirmation, class: 'col-xs-4 col-md-5 control-label' %>
      <div class="col-xs-7 col-md-3">
        <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-control' %>
      </div>
    </div>


    <div class="actions form-group">
      <div class="col-xs-offset-4 col-xs-7 col-md-offset-5">
        <%= f.submit  class: 'btn btn-success'  %>
      </div>
    </div>
<% end %>