<h2><%= t 'shared.sign_up.title' %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { class: 'form-horizontal'}) do |f| %>
    <div id="error_explanation">
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg %>
      <% end %>
    </div>

    <div class="field form-group">
      <%= f.label :first_name , class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :last_name , class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :email , class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :login , class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :login, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password , class: 'col-sm-5 control-label'  %>
      <div class="col-sm-7">
        <%= f.password_field :password, autocomplete: "off",class: 'form-control' %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :password_confirmation, class: 'col-sm-5 control-label' %>
      <div class="col-sm-7">
        <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-control' %>
      </div>
    </div>

    <div class="actions form-group">
      <div class="col-sm-offset-5 col-sm-7">
        <%= f.submit class: 'btn btn-success'  %>
      </div>
    </div>
<% end %>
