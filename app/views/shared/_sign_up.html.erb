<div class="modal fade" id="sign_up" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <h2><%= t '.title' %></h2>
      </div>

      <div class="modal-body">
        <%= form_for(Client.new, as: :client, url: client_registration_path, remote: true, :html => { class: 'form-horizontal', id: 'sign_up_client', :'data-type' => 'json'}) do |f| %>

            <div class="field form-group">
              <%= f.label :first_name , class: 'col-sm-5 control-label' %>
              <div class="col-sm-7">
                <%= f.text_field :first_name, class: 'form-control' %>
              </div>
            </div>

            <div class="field form-group">
              <%= f.label :last_name , class: 'col-sm-5 control-label' %>
              <div class="col-sm-7">
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
            </div>

            <div class="field form-group">
              <%= f.label :email , class: 'col-sm-5 control-label' %>
              <div class="col-sm-7">
                <%= f.text_field :email, class: 'form-control' %>
              </div>
            </div>

            <div class="field form-group">
              <%= f.label :login , class: 'col-sm-5 control-label' %>
              <div class="col-sm-7">
                <%= f.text_field :login, autofocus: true, class: 'form-control' %>
              </div>
            </div>

            <div class="field form-group">
              <%= f.label :password , class: 'col-sm-5 control-label'  %>
              <div class="col-sm-7">
                <% if @validatable %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "off",class: 'form-control' %>
              </div>
            </div>
            <div class="field form-group">
              <%= f.label :password_confirmation, class: 'col-sm-5 control-label' %>
              <div class="col-sm-7">
                <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-control' %>
              </div>
            </div>


            <div class="actions form-group">
              <div class="col-sm-offset-5 col-sm-7">
                <%= f.submit  class: 'btn btn-success'  %>
              </div>
            </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>