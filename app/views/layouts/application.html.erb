<!DOCTYPE html>
<html>
<head>
  <title>Margin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'shared/nav' %>

<div id="main-container" class="container-fluid">
  <% flash.each do |type, message| %>
      <div class="alert <%= alert_class_for(type) %> alert-dismissible fade in">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= message %>
      </div>
  <% end %>
  <div class="row ">
    <div class="col-xs-offset-1 col-xs-10 jumbotron vcenter">
      <%= yield %>
    </div>
  </div>
</div>
<% if client_signed_in? %>
    <div class="modal fade"  role="dialog" aria-labelledby="basicModal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button class="close" data-dismiss="modal">x</button>
            <h2></h2>
          </div>
          <div class="modal-body" ></div>
          <div class="modal-footer">
          </div>
        </div>
      </div>
    </div>
<% else %>
    <%= render 'shared/sign_in' %>
    <%= render 'shared/sign_up' %>
<% end %>
<footer class="navbar-fixed-bottom ">
  <div class="navbar-inner ">
    <div class="container-fluid">
      <p class="text-muted">Margin Application Â© MOEX 2014-2015</p>
    </div>
  </div>
</footer>
</body>
</html>