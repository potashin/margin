$('.modal-body').html("<%= j (render 'order_form') %>");

$('.modal-header h3').text("<%= t("helpers.submit.#{action_name.to_s}" , model: t('activerecord.models.order')) %>");
$(".modal form select[id=order_order_price_type_id]").on("change", function(){
	if($(this).val() == 2){
		$('.modal #price_options').show()
	} else {
		$('.modal #price_options').hide()
		$('.modal #price_options input').val(null)
		$(".modal #price_options select").prop("selectedIndex", -1);
	}
})

if($('form[id^=edit_order]').length)
	$('form[id^=edit_order]').find('input, select').not('[type=hidden],[name="order[quantity]"], [type="submit"]').prop({disabled: true})



$('.modal .modal-footer').html(null);
$('.modal').modal('show');
